{
  "name": "@cli-mmo/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./generated/prisma/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "targets": {
      "dev": {
        "dependsOn": [
          "^build"
        ]
      },
      "build": {
        "dependsOn": [
          "^docker:run",
          "^generate",
          "^migrate",
          "^build"
        ]
      },
      "docker:run": {
        "command": "docker compose -f docker-compose.yml up -d",
        "options": {
          "cwd": "packages/db"
        }
      },
      "generate": {
        "command": "prisma generate",
        "options": {
          "cwd": "packages/db"
        }
      },
      "migrate": {
        "continuous": true,
        "command": "prisma migrate dev",
        "options": {
          "cwd": "packages/db"
        }
      },
      "deploy": {
        "command": "prisma migrate deploy",
        "options": {
          "cwd": "packages/db"
        }
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^6.14.0"
  },
  "devDependencies": {
    "@nx/docker": "^21.4.1",
    "prisma": "^6.14.0"
  }
}
